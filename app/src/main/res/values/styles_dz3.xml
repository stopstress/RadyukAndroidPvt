<resources>

    <style name="Dz3HeaderTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dz3colorLightGray</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Dz3HeaderValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dz3colorOrange</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Dz3FieldTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/dz3colorLightGray</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Dz3FieldValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/dz3colorWhite</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>
