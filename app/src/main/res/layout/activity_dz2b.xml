<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp"
    tools:context=".dz2.Dz2bActivity">

    <EditText
        android:id="@+id/editTextDz2b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textUri"
        android:text="https://cdn.pixabay.com/photo/2016/12/04/21/58/rabbit-1882699_960_720.jpg"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/RelativeLayoutDz2b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutDz2b"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/image_border_dz2b"
        app:layout_constraintBottom_toTopOf="@+id/buttonDz2b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDz2b">

        <ImageView
            android:id="@+id/imageViewDz2b"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:background="@drawable/image_border_dz2b"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonDz2b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dz2b_load_image_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayoutDz2b" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDz2b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayoutDz2b" />

</android.support.constraint.ConstraintLayout>