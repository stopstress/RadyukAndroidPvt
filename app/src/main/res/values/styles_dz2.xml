<resources>

    <style name="Dz2EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">#2CFFFFFF</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/monda_regular</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

    <style name="Dz2ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHighlight">@android:color/white</item>
    </style>

</resources>
